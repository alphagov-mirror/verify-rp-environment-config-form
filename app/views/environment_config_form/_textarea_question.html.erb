<div class="form-group">
  <label class="form-label" for="<%= id %>"><%= title %></label>
  <textarea class="form-control" id="<%= id %>" name="<%= id %>" rows="5"></textarea>
  <details>
    <summary>
      <span class="summary">More Information</span>
    </summary>
    <div class="panel panel-border-narrow">
      <p><%= raw information %></p>
    </div>
  </details>
</div>